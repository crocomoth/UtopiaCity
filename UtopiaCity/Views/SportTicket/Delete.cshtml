@model SportTicketViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SportTicket</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SportComplexTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SportEventTitle)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfTheEvent)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VisitorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VisitorSurname)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SportTicketId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="AllSportTickets">Back to List</a>
    </form>
</div>
