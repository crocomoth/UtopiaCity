@model IEnumerable<UtopiaCity.Models.CitizenAccount.CitizensTask>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Task List</h1>
        </div>
        <div  class="col">
            <p>
                <a asp-action="Create" class="btn btn-primary m-1">Create New Task</a>
            </p>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col">
            <div class="card border-primary mb-3" style="width: 18rem;">
                <div class="card-body">
                    <div class="card-header">@item.Description</div>
                    <p class="card-text">@item.ReminderDate</p>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        </div>
    </div>
}

