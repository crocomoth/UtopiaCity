@model IEnumerable<SportComplex>

@{
    ViewData["Title"] = "AllSportComplexes";
}

<h1>AllSportComplexes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuildDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfSport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfSeats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuildDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeOfSport)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SportComplexId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SportComplexId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SportComplexId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
