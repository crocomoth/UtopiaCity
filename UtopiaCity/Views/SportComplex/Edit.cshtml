@model SportComplexViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SportComplex</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SportComplexId" />
            <div class="input-group mb-3">
                <label asp-for="SportComplexTitle" class="input-group-text"></label>
                <input asp-for="SportComplexTitle" class="form-control" />
                <span asp-validation-for="SportComplexTitle" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="NumberOfSeats" class="input-group-text"></label>
                <input asp-for="NumberOfSeats" class="form-control" />
                <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="BuildDate" class="input-group-text"></label>
                <input asp-for="BuildDate" class="form-control" />
                <span asp-validation-for="BuildDate" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="TypeOfSport" class="input-group-text"></label>
                <select asp-for="TypeOfSport" class="form-control">
                    @foreach (var type in Enum.GetValues(typeof(TypesOfSport)))
                    {
                        <option value="@type">
                            @type
                        </option>
                    }
                </select>
                <span asp-validation-for="TypeOfSport" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <label asp-for="Address" class="input-group-text"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-secondary" role="button" asp-action="AllSportComplexes">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}