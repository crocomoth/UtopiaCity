@model IEnumerable<UtopiaCity.ViewModels.FireSystem.TransportManagementViewModel>

@{
    ViewData["Title"] = "TransportManagentListView";
}

<h1>TransportManagentListView</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfFireCar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirePump)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContainerForStoringFireExtinguishingAgents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FireFightingEquipment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfFireCar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirePump)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContainerForStoringFireExtinguishingAgents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FireFightingEquipment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
