@model SportEventViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SportEvent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SportEventId" />
            <input type="hidden" asp-for="SportComplexId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfTheEvent" class="control-label"></label>
                <input asp-for="DateOfTheEvent" class="form-control" />
                <span asp-validation-for="DateOfTheEvent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportComplexTitle" class="control-label"></label>
                <select asp-for="SportComplexTitle" class="form-control">
                    @foreach (var sportComplexTitle in Model.SportComplexesTitles)
                    {
                        <option value="@sportComplexTitle">
                            @sportComplexTitle
                        </option>
                    }
                </select>
                <span asp-validation-for="SportComplexTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllSportEvents">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
