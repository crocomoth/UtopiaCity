@model IEnumerable<SportComplexEventViewModel>

@{
    ViewData["Title"] = "AllSportEvents";
}

<h1>AllSportEvents</h1>

<p>
    <a class="btn btn-outline-primary" role="button" asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SportEvent.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportEvent.DateOfTheEvent)
            </th>
            <th>
                Sport Complex
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SportEvent.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SportEvent.DateOfTheEvent)
            </td>
            <td>
                <a asp-controller="SportComplex" asp-action="Details" asp-route-id="@item.SportComplex.SportComplexId">@item.SportComplex.Title</a>
            </td>
            <td>
                <a class="btn btn-outline-success btn-sm" role="button" asp-action="Edit" asp-route-id="@item.SportEvent.SportEventId">Edit</a> |
                <a class="btn btn-outline-info btn-sm" role="button" asp-action="Details" asp-route-id="@item.SportEvent.SportEventId">Details</a> |
                <a class="btn btn-outline-danger btn-sm" role="button" asp-action="Delete" asp-route-id="@item.SportEvent.SportEventId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
