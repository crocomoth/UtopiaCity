@model UtopiaCity.Models.Media.Account.AuthenticateRequest

<h2>Log In to the media service</h2>

<a asp-action="Register" asp-controller="Account">Sign Up</a>
<div class="row backgroundWhite border">
    <div class="col-md-8">
        <form asp-action="Authenticate" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Email">Email</label>
                    <br />
                    <input type="text" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <br />
                    <input asp-for="Password" type="password"/>
                    <span asp-validation-for="Password" class="text-danger"/>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Login</button>
                </div>
            </div>
        </form>
    </div>
</div>