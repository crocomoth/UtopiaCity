@model UtopiaCity.ViewModels.FireSystem.EmployeeManagementViewModel

@{
    ViewData["Title"] = "EditEmployeeManagementView";
}

<h1>EditEmployeeManagementView</h1>

<h4>EmployeeManagementViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CanCheck" /> @Html.DisplayNameFor(model => model.CanCheck)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="EmployeePosition" class="control-label"></label>
                <select asp-for="EmployeePosition" class="form-control">
                    @foreach (var empPos in ViewBag.PositionsName)
                    {
                        <option value="@empPos">
                            @empPos
                        </option>
                    }
                </select>
                <span asp-validation-for="EmployeePosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label"></label>
                <select asp-for="DepartmentName" class="form-control">
                    @foreach (var depName in ViewBag.DepartmentsNames)
                    {
                        <option value="@depName">
                            @depName
                        </option>
                    }
                </select>
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

