@model UtopiaCity.Models.Airport.Ticket

@{
    ViewData["Title"] = "TicketsDeleteView";
}

<h1>TicketsDeleteView</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ticket</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direction)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direction)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Flight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Flight.FlightNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PermitedModel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PermitedModel.PermissionStatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResidentAccount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResidentAccount.FirstName)
        </dd>
    </dl>

    <form asp-action="TicketsDeleteView">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

