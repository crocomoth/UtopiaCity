@model UtopiaCity.Models.PublicCatering.Reservation

@{
    ViewData["Title"] = "CreateReservationView";
}

<h1>Add a new reservation to the list </h1>

<h4>Reservation</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method = "post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookSeats" class="control-label"></label>
                <input asp-for="BookSeats" class="form-control"/>
                <span asp-validation-for="BookSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input type="datetime-local" asp-for="BookingDate" class="form-control"/>
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input asp-for="RestaurantId" type="hidden" value="@Context.Request.Path.ToString().Substring(@Context.Request.Path.ToString().Length - 36, 36)">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
