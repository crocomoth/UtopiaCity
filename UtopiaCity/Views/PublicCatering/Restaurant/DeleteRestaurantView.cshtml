@model UtopiaCity.Models.PublicCatering.Restaurant

@{
    ViewData["Title"] = "DeleteRestaurantView";
}

<h4>Remove a restaurant from the list </h4>

<h6>Are you sure you want to delete this?</h6>
<div>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.Name)
        </dt>
    </dl>

    <form asp-action="DeleteRestaurantView">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
