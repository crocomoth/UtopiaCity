@model IEnumerable<Marriage>

@{
    ViewData["Title"] = "Index";
}

<h1>List of mariages</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Persons data
            </th>
            <th>
                Marriage Date
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstPersonData)<br>
                @Html.DisplayFor(modelItem => item.SecondPersonData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MarriageDate)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
