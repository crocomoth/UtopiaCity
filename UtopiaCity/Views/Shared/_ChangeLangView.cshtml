@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocalOptions

@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultures = LocalOptions.Value.SupportedUICultures
        .Select(i => new SelectListItem { Value = i.Name, Text = i.NativeName })
        .ToList();
}


<form asp-controller="TimelineBasic" asp-action="ChangeLang" asp-route-returnUrl="@Context.Request.Path" method="post" class="form-horizontal">
    Language: <select name="culture" onchange="this.form.submit();" asp-for="@requestCulture.RequestCulture.UICulture.Name" asp-items="cultures"></select>
</form>

