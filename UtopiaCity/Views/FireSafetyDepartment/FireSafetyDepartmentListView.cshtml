@model IEnumerable<UtopiaCity.ViewModels.FireSystem.DepartmentViewModel>

@{
    ViewData["Title"] = "FireSafetyDepartmentListView";
}

<h1>FireSafetyDepartmentListView</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Сhief)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentStatusEnum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Сhief)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentStatusEnum)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
