@model UtopiaCity.Models.Airport.TransportManagerSystem.ForPassenger

@{
    ViewData["Title"] = "CreateForPassengerToView";
}

<h1>Do you want to go to Airport?</h1>
<p>
    <h4>
        Make sure that you can't take to Airport by your own!
    </h4>
</p>
<h4>Please complete the form !!! </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create ForPassengerToView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MobilePhone" class="control-label"></label>
                <input asp-for="MobilePhone" class="form-control" />
                <span asp-validation-for="MobilePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportType" class="control-label"></label>
                <select asp-for="TransportType" class="form-control">
                    @foreach (var type in Enum.GetValues(typeof(TypeOfTransportForPassengers)))
                     {
                        <option value="@type">
                            @type
                        </option>
                     }
                </select>
                <span asp-validation-for="TransportType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>
                    <h5>
                         Enter the address where you're now.
                    </h5>
                </p>
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayType" class="control-label"></label>
                <select asp-for="PayType" class="form-control">
                    @foreach (var type in Enum.GetValues(typeof(TypeOfPay)))
                     {
                        <option value="@type">
                            @type
                        </option>
                     }
                </select>
                <span asp-validation-for="PayType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="CreateForPassenger" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Orders List</a>
</div>

