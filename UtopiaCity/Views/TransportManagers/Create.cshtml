@model UtopiaCity.Models.Airport.TransportManagerSystem.TransportManager

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>New Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TypeOfOrder" class="control-label"></label>
                <select asp-for="TypeOfOrder" class="form-control">
                    @foreach (var type in Enum.GetValues(typeof(TypeOfOrders)))
                     {
                        <option value="@type">
                            @type
                        </option>
                     }
                </select>
                <span asp-validation-for="TypeOfOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ForPassengerId" class="control-label"></label>
                <select asp-for="ForPassengerId" class ="form-control" asp-items="ViewBag.ForPassengerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

