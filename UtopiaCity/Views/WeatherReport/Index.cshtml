@model IEnumerable<UtopiaCity.Models.Airport.WeatherReport>

@{
    ViewData["Title"] = "Weather Reports List";
}

<h1>List of Weather Reports</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PermitedModel.PermissionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectionTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectionFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightWeather)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PermitedModel.PermissionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectionTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DirectionFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlightWeather)
            </td>
            <td>
                <a asp-action="Dispatcher" asp-route-id="@item.Id">Check Permission</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
