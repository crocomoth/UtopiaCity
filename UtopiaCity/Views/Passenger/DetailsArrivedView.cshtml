@model UtopiaCity.Models.Airport.ArrivingPassenger

@{
    ViewData["Title"] = "DetailsArrivedView";
}

<h1>Details Of Arrived Passenger</h1>

    <div>
        <h4>ArrivingPassenger</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PassengerFirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PassengerFirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PassengerFamilyName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PassengerFamilyName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PassengerBirthDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PassengerBirthDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PassengerGender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PassengerGender)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PassengerStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PassengerStatus)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PassengerMarriageStatus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PassengerMarriageStatus)
            </dd>
        </dl>
    </div>   
    
    <div>
        <form asp-action="DetailsArrived">
            <div class="form-group">
                <input type="submit" asp-action="DetailsArrived" value="Make New Resident" class="btn btn-primary" />
            </div>
        </form>
        <a asp-action="ListOfArrivals">
            <div class="form-group">
                <input type="submit" asp-action="ListOfArrivals" value="Decline" class="btn btn-danger" />
            </div>
        </a>|
        <a asp-action="ListOfArrivals">Back to List</a>
    </div>
