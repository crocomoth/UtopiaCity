@model UtopiaCity.Models.Airport.Passenger

@{
    ViewData["Title"] = "CreateDepartedPassengersView";
}

<h1>CreateDepartedPassengersView</h1>

<h4>Passenger</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDepartedPassengersView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PassengerName" class="control-label"></label>
                <select asp-for="ResidentAccountId" class="form-control" asp-items="ViewBag.Residents"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProgressStatus" class="control-label"></label>
                <input asp-for="ProgressStatus" class="form-control" />
                <span asp-validation-for="ProgressStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerStatus" class="control-label"></label>
                <input asp-for="PassengerStatus" class="form-control" />
                <span asp-validation-for="PassengerStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="CreateDepartedPassengers" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Ticket" asp-action="Index">Back to List</a>
</div>

