                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FirePump" /> @Html.DisplayNameFor(model => model.FirePump)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ContainerForStoringFireExtinguishingAgents" /> @Html.DisplayNameFor(model => model.ContainerForStoringFireExtinguishingAgents)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="FireFightingEquipment" class="control-label"></label>
                <input asp-for="FireFightingEquipment" class="form-control" />
