@model UtopiaCity.Models.FireSystem.ManagerSystemTransportAndEmployees.TransportManagement

@{
    ViewData["Title"] = "EditTransportManagementView";
}

<h1>EditTransportManagementView</h1>

<h4>TransportManagement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTransportManagementView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TypeOfFireCar" class="control-label"></label>
                <input asp-for="TypeOfFireCar" class="form-control" />
