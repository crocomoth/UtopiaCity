@{
    ViewData["Title"] = "Sport";
}

<hr />
<div>
    <h5>Sport Achievements</h5>
    <ul class="list-group-horizontal-md">
        @{
            if (ViewBag.SportAchievements == null)
            {
                <li>There are no new sport achievements</li>
            }
            else
            {
                foreach (var sportAchievement in ViewBag.SportAchievements)
                {
                    <li>@sportAchievement.Title | @sportAchievement.Date | @sportAchievement.Description</li>
                }
            }
        }
    </ul>
</div>
<hr />
<div>
    <div id="sportComplexCarousel" class="carousel slide w-75" data-ride="carousel">
        <div class="carousel-inner">
            <ol class="carousel-indicators">
                <li data-target="#sportComplexCarousel" data-slide-to="0" class="active"></li>
                @{ int sportComplexCounter = 1; }
                @foreach (var sportComplex in ViewBag.SportComplexes)
                {
                    <li data-target="#sportComplexCarousel" data-slide-to="@sportComplexCounter"></li>
                    sportComplexCounter++;
                }
            </ol>
            <div class="carousel-item active">
                <img src=@("/images/sport-complexes/CommonActivities.jpg") class="d-block w-100 rounded sportComplexImage" alt="CommonActivities">
                <div class="container">
                    <h5>Sport complexes of Utopia City</h5>
                </div>
            </div>
            @foreach (var sportComplex in ViewBag.SportComplexes)
            {
                <div class="carousel-item" data-interval="3000">
                    <img src=@("/images/sport-complexes/" + sportComplex.TypeOfSport + ".jpg") class="d-block w-100 rounded sportComplexImage" alt="@sportComplex.Title">
                    <div class="container">
                        <h5>@sportComplex.Title</h5>
                    </div>
                </div>
            }
        </div>
        <a href="#sportComplexCarousel" class="carousel-control-prev" role="button" data-slide="prev">
            <span class="sr-only">Previous</span>
            <span class="carousel-control-prev-icon" aria-hidden="true">
            </span>
        </a>
        <a href="#sportComplexCarousel" class="carousel-control-next" role="button" data-slide="next">
            <span class="sr-only">Next</span>
            <span class="carousel-control-next-icon" aria-hidden="true">
            </span>
        </a>
    </div>
</div>
<div>
    <a role="button" class="btn btn-outline-primary" asp-controller="SportComplex" asp-action="AllSportComplexes">Our Sport Complexes</a>
</div>

<hr />
<div class="row">
    <h5 class="mr-3">You can also look through our Sport Events:</h5>
    <a role="button" class="btn btn-sm btn-outline-primary" asp-controller="SportEvent" asp-action="AllSportEvents">Our Sport Events</a>
</div>

<hr />
<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        <h5 class="mr-3">Requests to the city administration:</h5>
        <a role="button" class="btn btn-sm btn-outline-primary" asp-controller="RequestToAdministration" asp-action="AllRequestsToAdministration">
            Requests To The Administration
        </a>
    }
    else
    {
        <h5 class="mr-3">Not authenticated persons can not look through requests to the administration</h5>
    }
</div>

<hr />
<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        <h5 class="mr-3">My Sport Tickets</h5>
        <a role="button" class="btn btn-sm btn-outline-primary" asp-controller="SportTicket" asp-action="AllSportTickets">Tickets</a>
    }
    else
    {
        <h5 class="mr-3">Not authenticated persons can not buy tickets</h5>
    }
</div>
