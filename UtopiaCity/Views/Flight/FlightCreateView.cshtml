@model UtopiaCity.Models.Airport.Flight
@{
    ViewData["Title"] = "Creating Flights";
}
<h1>Creating Flights</h1>

<h4>New Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Creating Flights">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocationPoint" class="control-label"></label>
                <input asp-for="LocationPoint" class="form-control" />
                <span asp-validation-for="LocationPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationPoint" class="control-label"></label>
                <input asp-for="DestinationPoint" class="form-control" />
                <span asp-validation-for="DestinationPoint" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weather" class="control-label"></label>
                <input asp-for="Weather" class="form-control" />
                <span asp-validation-for="Weather" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfAircraft" class="control-label"></label>
                <select asp-for="TypeOfAircraft" class="form-control" asp-items="ViewBag.TypeOfAircraft"></select>
                <span asp-validation-for="TypeOfAircraft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" asp-action="Create" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

